<% layout('layouts/boilerplate') %>
<link
    rel="stylesheet"
    type="text/css"
    href="/stylesheets/starability-fade.min.css"
    crossorigin="anonymous"
/>
<link
    href="https://api.mapbox.com/mapbox-gl-js/v3.4.0/mapbox-gl.css"
    rel="stylesheet"
    crossorigin="anonymous"
/>
<link rel="stylesheet" href="/stylesheets/map.css" crossorigin="anonymous" />
<div class="row">
    <div class="col-6 mb-3">
        <div id="carouselExample" class="carousel slide">
            <div class="carousel-inner">
                <% campground.images.forEach((img, i) => { %>
                <div class="carousel-item <%= (i === 0) ? 'active' : '' %>">
                    <img
                        src="<%= img.url %>"
                        class="d-block w-100 rounded"
                        alt="..."
                        crossorigin="anonymous"
                    />
                </div>
                <% }) %>
            </div>
            <% if (campground.images.length > 1) { %>
            <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExample"
                data-bs-slide="prev"
            >
                <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExample"
                data-bs-slide="next"
            >
                <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
            </button>
            <% } %>
        </div>
        <div class="card mt-1">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-secondary">
                    <%= campground.location %>
                </li>
                <li class="list-group-item">
                    Submitted: <%= campground.author.username %>
                </li>
                <li class="list-group-item">â‚¹<%= campground.price %>/night</li>
            </ul>
            <% if (currentUser && campground.author.equals(currentUser._id)) {
            %>
            <div class="card-body">
                <a
                    href="/campgrounds/<%= campground._id %>/edit"
                    class="btn btn-warning card-link"
                    >Edit</a
                >
                <form
                    class="d-inline"
                    action="/campgrounds/<%= campground._id %>?_method=DELETE"
                    method="post"
                >
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
            <% } %>
            <div class="card-footer text-body-secondary" id="timePassed"></div>
        </div>
    </div>
    <div class="col-6 mb-3">
        <div id="showMap" class="mb-3"></div>
        <% if (currentUser) { %>
        <h2 class="mb-4">Leave a review</h2>
        <form
            action="/campgrounds/<%= campground._id %>/reviews"
            method="post"
            class="needs-validation"
            novalidate
        >
            <fieldset class="starability-fade w-100" style="min-height: 40px">
                <input
                    type="radio"
                    id="no-rate"
                    class="input-no-rate"
                    name="review[rating]"
                    value="0"
                    checked
                    aria-label="No rating."
                />
                <input
                    type="radio"
                    id="first-rate1"
                    name="review[rating]"
                    value="1"
                />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input
                    type="radio"
                    id="first-rate2"
                    name="review[rating]"
                    value="2"
                />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input
                    type="radio"
                    id="first-rate3"
                    name="review[rating]"
                    value="3"
                />
                <label for="first-rate3" title="Average">3 stars</label>
                <input
                    type="radio"
                    id="first-rate4"
                    name="review[rating]"
                    value="4"
                />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input
                    type="radio"
                    id="first-rate5"
                    name="review[rating]"
                    value="5"
                />
                <label for="first-rate5" title="Amazing">5 stars</label>
                <button
                    type="button"
                    id="resetRating"
                    class="btn btn-secondary ms-4"
                >
                    <i class="fas fa-undo-alt"></i>
                </button>
            </fieldset>
            <div class="mb-3">
                <label
                    for="Review"
                    class="form-label"
                    style="margin-bottom: 0.2rem"
                    ><h5>Review</h5></label
                >
                <textarea
                    name="review[body]"
                    id="Review"
                    class="form-control"
                    required
                ></textarea>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
        <% } %> <% for (let review of campground.reviews) { %>
        <div class="card m-2">
            <div class="card-body p-3">
                <h5 class="card-title">
                    Submitted By: <%=review.author.username%>
                </h5>
                <p
                    class="card-text starability-result"
                    data-rating="<%=review.rating%>"
                >
                    Rating: <%=review.rating%>
                </p>
                <p class="fw-normal card-text"><%=review.body%></p>
                <% if(currentUser && review.author.equals(currentUser._id)) { %>
                <div class="d-flex">
                    <div class="ms-auto">
                        <form
                            class="d-inline p-2"
                            action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE"
                            method="post"
                        >
                            <button
                                type="submit"
                                class="card-link btn btn-danger"
                            >
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
                <% } %>
            </div>
        </div>

        <script
            src="https://api.mapbox.com/mapbox-gl-js/v3.4.0/mapbox-gl.js"
            crossorigin="anonymous"
        ></script>
        <script>
            const campground = <%- JSON.stringify(campground) %>;
            const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        </script>
        <script
            src="/javascripts/showReviews.js"
            crossorigin="anonymous"
        ></script>
        <script src="/javascripts/showMap.js" crossorigin="anonymous"></script>
    </div>
</div>
